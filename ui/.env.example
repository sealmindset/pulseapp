# Next.js UI environment variables
# Create .env.local with these values in the same directory.

# Base URL of the Python Function App (scenario orchestrator)
# Example: https://func-pulse-training-scenario-prod.azurewebsites.net
FUNCTION_APP_BASE_URL=

# Optional: Tag environment for UI
NEXT_PUBLIC_ENV_NAME=local

# Application Insights (server-side)
APPINSIGHTS_CONNECTION_STRING=

# To generate a hex string of 32 characters for JWT secret, run:
# LC_ALL=C tr -dc 'A-Za-z0-9' </dev/urandom </dev/urandom | head -c 32; echo

# Admin UI gating (dev only)
NEXT_PUBLIC_ENABLE_ADMIN=true

# Training UI gating (PULSE Trainer, dev/preview only)
NEXT_PUBLIC_ENABLE_TRAINING=false

# ============================================
# Development Mode Settings
# ============================================

# Enable dev mode to use test session ID (set to true for local development)
NEXT_PUBLIC_USE_DEV_SESSION=false

# Test session ID for development (pre-seeded with sample scorecard data)
# Use the seed-test-session API to create test data:
# curl -X POST "https://func-pulse-training-scenario-prod.azurewebsites.net/api/seed-test-session" \
#   -H "Content-Type: application/json" \
#   -d '{"sessionId": "dev-test-session-001", "outcome": "won"}'
NEXT_PUBLIC_DEV_SESSION_ID=dev-test-session-001

# Optional: User ID for readiness card testing
# NEXT_PUBLIC_PULSE_READINESS_USER_ID=
